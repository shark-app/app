<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="@dimen/edittext_width"
    android:background="@color/fbutton_color_belize_hole">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_height="wrap_content"
        android:layout_width="@dimen/edittext_width_sp"
        android:id="@+id/passphrase"
        android:inputType="textPassword|textNoSuggestions|textMultiLine"
        android:hint="Passphrase"
        app:met_floatingLabel="highlight"
        app:met_textColorHint="@android:color/white"
        app:met_baseColor="@android:color/white"
        app:met_primaryColor="@color/colorPrimaryDark"
        app:met_textColor="@color/dark_grey"
        app:met_underlineColor="@android:color/white"
        app:met_iconLeft="@drawable/ic_lock_white_24dp"
        app:met_iconPadding="@dimen/standard_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <info.hoang8f.widget.FButton
            android:id="@+id/ok"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="@dimen/padding_sp"
            android:paddingBottom="@dimen/padding_sp"
            android:paddingLeft="@dimen/padding_sp"
            android:paddingRight="@dimen/padding_sp"
            android:layout_marginBottom="@dimen/padding_sp"
            android:layout_marginTop="@dimen/padding_sp"
            android:layout_marginLeft="@dimen/padding_sp"
            android:layout_marginRight="@dimen/padding_sp"
            android:textColor="@android:color/white"
            android:text="@string/ok"
            fbutton:buttonColor="@color/fbutton_color_nephritis"
            fbutton:shadowEnabled="true"/>

        <info.hoang8f.widget.FButton
            android:id="@+id/cancel"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="@dimen/padding_sp"
            android:paddingBottom="@dimen/padding_sp"
            android:paddingLeft="@dimen/padding_sp"
            android:paddingRight="@dimen/padding_sp"
            android:layout_marginBottom="@dimen/padding_sp"
            android:layout_marginTop="@dimen/padding_sp"
            android:layout_marginLeft="@dimen/padding_sp"
            android:layout_marginRight="@dimen/padding_sp"
            android:textColor="@android:color/white"
            android:text="@string/cancel"
            fbutton:buttonColor="@color/fbutton_color_pomegranate"
            fbutton:shadowEnabled="true"/>
    </LinearLayout>
</LinearLayout>